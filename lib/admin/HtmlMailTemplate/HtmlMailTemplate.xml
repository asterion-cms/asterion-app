<object>
    <name>HtmlMailTemplate</name>
    <table>html_mail_template</table>
    <info>
        <sql>
            <primary>id</primary>
        </sql>
        <form>
            <title>email_template</title>
            <information>email_template_information</information>
            <icon>envelope</icon>
            <orderBy>code</orderBy>
            <label>#title</label>
        </form>
    </info>
    <attributes>
        <attribute>
            <name>id</name>
            <type>id_autoincrement</type>
        </attribute>
        <attribute>
            <name>code</name>
            <label>code</label>
            <type>text_code</type>
            <required>unique</required>
        </attribute>
        <attribute>
            <name>title</name>
            <language>true</language>
            <label>title</label>
            <required>not_empty</required>
            <type>text_long</type>
        </attribute>
        <attribute>
            <name>title_url</name>
            <language>true</language>
            <type>hidden_url</type>
            <refAttribute>title</refAttribute>
        </attribute>
        <attribute>
            <name>template</name>
            <language>true</language>
            <label>template</label>
            <required>not_empty</required>
            <type>textarea_ck</type>
        </attribute>
    </attributes>
    <indexes>
        <index>
            <name>code</name>
            <fields>code</fields>
        </index>
    </indexes>
</object>